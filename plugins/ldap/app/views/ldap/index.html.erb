<% content_for :head do %>
  <%= javascript_include_tag :defaults %>

  <style type="text/css">
    label.error { float: none; padding-left: 10em }
  </style>

  <%= javascript_include_tag "validation.js" %>

<% end %>

<% disabled = !@permissions[:write] %>

<div class="nav-buttons">
  <% if !disabled -%>
  <div id="progress" style="display: none; margin-bottom: 10px"><img src="/images/working.gif" alt="Working"/><span style="vertical-align: 50%; margin-left: 5px">...Wait...</span></div>
  <% end -%>
</div>

  <div class='plugin-icon'><img src='/icons/yast-users.png'/> <%= _("LDAP client") %></div>
  <div class='plugin-content'>

    <% form_for(:ldap, @ldap, :url => { :action => 'update' },
      :html => { :method => :put, :id => 'ldap_form' }
    ) do |f| %>

	  <div class="ldap-content" style="padding-bottom: 10px">
	    <p>
	      <%= check_box 'ldap', :enabled, {:disabled => disabled, :checked => @ldap.enabled}, true,false -%>
	      <%= _("Enable LDAP Authentication") %>
	    </p>
            <p>
              <%= label_tag :ldap_server, _("LDAP Server Address") %>
            </p>
            <p>
              <%= text_field :ldap, :server, :disabled => disabled, :class=> 'required' %>
            </p>
            <p>
              <%= label_tag :ldap_base_dn, _("Base DN") %>
            </p>
            <p>
              <%= text_field :ldap, :base_dn, :disabled => disabled, :class => 'required'  %>
            </p>
       	    <p>
	      <%= check_box 'ldap', :tls, {:disabled => disabled, :checked => @ldap.tls}, true,false -%>
	      <%= _("Secure Connection") %>
	    </p>
	    <p>
              <%= form_send_buttons :onclick=>"Element.show('progress')" %>
            </p>

    <% end %>

  </div>
