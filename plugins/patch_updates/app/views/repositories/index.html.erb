<% if @permissions and @repos %>

  <div class='plugin-icon'><img src='/icons/yast-online_update.png'/><%=_("Software Repositories") %></div>
  <div class='plugin-content grid_12'>
  <div class="loading"></div>
  <% if @repos.empty? %>
    <h3><%=_("No software repository configured.") %></h3>
  <% else %>
    <h3><%=_("Configured software repositories") %></h3>
      <table cellpadding="3px" class="alternate-rows">
	<tr>
	  <th>Enabled</th>
	  <th>Alias</th>
	  <th>Name</th>
	</tr>
      <% disabled = !@permissions[:write] %>
      <% @repos.each do |r| %>
	<tr>
	  <td align="center"><input type="checkbox" <%= r.enabled ? ' checked' : '' -%> <%= disabled ? 'disabled' : '' -%> /></td>
	  <td><%= link_to (h r.repo_alias), :action => 'edit', :id => r.repo_alias -%></td>
	  <td><%= link_to (h r.name), :action => 'edit', :id => r.repo_alias -%></td>
	  <% unless disabled -%>
	    <td><%= link_to image_tag('/images/delete.png', :alt => "delete"),
	      {:action => 'delete', :id => r.repo_alias},
	      {:confirm => _("Really delete repository '%s'?") % h(r.repo_alias), :method => :delete} %>
	    </td>
	  <% end -%>
	</tr>
      <% end  %>
      </table>
  <% end %>

  <br>
  <%= link_to _("Back"), '/', :class=>"button" %>
  <%= link_to _("Add"), {:action => 'add'}, :class=>"button" %> <%= _("a new repository") %>

  </div>

<% end %>

