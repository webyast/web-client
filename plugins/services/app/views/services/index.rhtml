<%= javascript_include_tag :defaults %>
<%= javascript_include_tag "jquery.quicksearch.js" %>
<% javascript_tag do %>
$(document).ready(function() {

    $("#services fieldset").each (function(index) {
	if ($(this).is(":has(span.status_running)")) {
	    $(this).find("legend .service-icon").attr('class','service-icon running');
	}
	else if ($(this).is(":has(span.status_dead)")) {
	    $(this).find("legend .service-icon").attr('class','service-icon dead');
	}
	else {
	    $(this).find("legend .service-icon").attr('class','service-icon unknown');
	}
    });

    $('#services fieldset').quicksearch({
	attached: '#services',
	loaderText: '',
	labelText: '<%= _("Quick Search")%>',
	delay: 100
    });

    $(".accordion").accordion({
       autoHeight : false,
       navigation : true,
       collapsible: true,
       header     : 'fieldset legend'
    });

    $(".accordion").accordion('activate',false);
})

// adapt the status icon of given service
function toggle_service_info (id) {
    var heading	= $(id).closest('.service-content').siblings('legend');
    if ($(id).is(':has(span.status_running)')) {
	$(heading).find(".service-icon").attr('class','service-icon running');
	$(id).siblings('a#start').hide();
	$(id).siblings('a#stop').show();
    }
    else if ($(id).is(':has(span.status_dead)')) {
	$(heading).find(".service-icon").attr('class','service-icon dead');
	$(id).siblings('a#stop').hide();
	$(id).siblings('a#start').show();
    }
    else {
	$(heading).find(".service-icon").attr('class','service-icon unknown');
	$(id).siblings('a#stop').hide();
	$(id).siblings('a#start').show();
    }
}

function select_status (val) {
    if (val == "all") {
	$("#services > fieldset").show();
    }
    else if (val == "not-running") {
	$('#services > fieldset').each(function(index) {
	    if ($(this).is(":has(span.status_not_running)")) {
		$(this).show();
	    } else {
		$(this).hide();
	    }
	});
    }
    else if (val == "running") {
	$('#services > fieldset').each(function(index) {
	    if ($(this).is(":has(span.status_running)")) {
		$(this).show();
	    } else {
		$(this).hide();
	    }
	});
    }
    else if (val == "dead") {
	$('#services > fieldset').each(function(index) {
	    if ($(this).is(":has(span.status_dead)")) {
		$(this).show();
	    } else {
		$(this).hide();
	    }
	});
    };
}
<% end %>

<div class='plugin-icon'><img src='/icons/yast-system.png' alt=''/><%= _("System Services") %></div>

<div class="plugin-content grid_12">


<% unless @permissions[:execute] %>
<p style="padding: 10px"><%=_("You do not have permission to execute the services.")%></p>
<% end %>

<p>
    <label for="filter"><%=_("Filter services")%></label>
    <%= select_tag "filter", options_for_select([
	[ _("All"), "all"],
	[ _("Running"), "running"],
	[ _("Not Running"), "not-running"],
	[ _("Dead"), "dead"],
    ])
    %>
    <%= observe_field("filter", :function => "select_status(value)") %>
</p>
<div id="services" class="accordion">
<%
commands	= [ "start", "stop", "restart", ]
@services.each do |service| %>
  <fieldset class="wrapper with-background">

  <legend><span class="service-icon"></span><%=service.name %> <em style="position:absolute; left:25%"><%=service.summary%></em></legend>

  <div class='service-content'>

  <p class='description'>
    <i><%= service.description ? h(service.description) : _("Description for service is not available") %></i>
  </p> 

  <img src="/images/working.gif" height="12" width="12" border="0"
    id="service_progress_<%=service.name%>" style="display: none" alt='working...'/>

  <span class='service_status' id='service_status_<%=service.name%>'>
    <% unless service.status.nil? %>
    <%= render :partial => 'status', :object => service.status %>
    <% end %>
  </span>

  <% commands.each do |cmd|
	if @permissions[:execute] %>
	    <%=
		url	= {
		    :id		=> cmd, 
		    :action	=> "execute", 
		    :service_id	=> service.name,
		    :custom	=> service.custom
		}
		status_url	= {
		    :controler	=> :services,
		    :action	=> :show_status,
		    :id		=> service.name,
		    :custom	=> service.custom
		}
		html_options	= {
		    :class	=> "button"
		}
		html_options[:style]	= "display: none" if (cmd == "start" && service.status == 0) || (cmd == "stop" && service.status != 0)
		html_options[:id]	= cmd
		link_to_remote cmd,
		    :url	=> url,
		    :loading	=> "$('#service_progress_#{service.name}').show(); $('#service_status_#{service.name}').hide(); $('#service_result_#{service.name}').hide();",
		    :complete   => remote_function(:update => "service_status_#{service.name}",
		        :url => status_url,
			:complete => "$('#service_progress_#{service.name}').hide(); $('#service_status_#{service.name}').show(); toggle_service_info ('#service_status_#{service.name}'); $('#service_result_#{service.name}').show();"
		    ),
		    :html	=> html_options,
		    :update	=> "service_result_#{service.name}"
	    %>
	<%
	end
     end %>

     <%=
	url	= {
	    :controller => :services,
	    :id		=> service.name,
	    :action	=> :show_status,
	    :custom	=> service.custom
	}
# FIXME toggle_service_info!
	link_to_remote _('refresh status'), :update => "service_status_#{service.name}",
	    :url => url,
	    :loading  => "$('#service_progress_#{service.name}').show(); $('#service_status_#{service.name}').hide(); $('#service_result_#{service.name}').hide();",
	    :complete => "$('#service_progress_#{service.name}').hide(); $('#service_status_#{service.name}').show()"
      %>

      <span class='service_result' id='service_result_<%=service.name%>'>
	<%= render :partial => 'result' %>
      </span>
  </div>
  </fieldset>
<% end %>
</div>
<fieldset>
<%= form_back_button %>
</fieldset>
</div>
