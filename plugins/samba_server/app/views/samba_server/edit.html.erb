<h1><%=_("Edit Samba Share")%></h1>
<br>

<% disabled = ! @permissions[:editshare] %>

<% form_for(:share, @share, :url => { :action => "update", :id => @share.id }, :html => { :method => :put } ) do |f| %>
  <%= f.error_messages %>

  <div class="table">
    <table class="list" cellpadding="0" cellspacing="0">
    <tr>
 	<th class="full" colspan="2"><%=_("Samba Share")%></th>
    </tr>
    <tr>
	<td class="first" width="120"><strong><%=_("Share Name")%></strong></td>
	<td class="last"><%= f.text_field :id, :disabled => disabled %></td>
    </tr>

    <% @share.attributes['parameters'].attributes['parameter'].each do |p| %>
    <tr>
	<td class="first" width="120"><strong><%= p.attributes["name"]%></strong></td>
	<td class="last"> <input type="text" id="share_parameters_<% p.attributes["id"] -%>" name="share_parameters[<% p.attributes["id"] -%>]" value="<%= p.attributes["value"] -%>"/> </td>
    </tr>
    <% end %>

    </table>
    <p><%= f.submit _("Update"), :disabled => disabled %>
    <%= link_to _('Back'), {:controller => :samba_server}, :onclick=>"Element.show('progress')", :class => "button"%></p>
  </div>
<% end %>
