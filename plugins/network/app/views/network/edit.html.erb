<h1><%=_("Edit Network Device")%></h1>
<br>

<% disabled = ! @permissions[:write] %>

<% form_for(:network, @network, :url => { :action => "update" }, :xml => { :method => :put } ) do |f| %>
  <%= f.error_messages %>

  <div class="table">
    <table class="list" cellpadding="0" cellspacing="0">
    <tr>
 	<th class="full" colspan="2"><%=_("Configuration")%></th>
    </tr>
    <tr>
	<td class="first" width="120"><strong><%=_("ID")%></strong></td>
	<td class="last"><%= f.text_field :id, :disabled => disabled %></td>
    </tr>
    <tr>
	<td class="first"><strong><%=_("Description")%></strong></td>
	<td class="last"><%= f.text_field :description, :disabled => disabled %></td>
    </tr>
    <tr>
	<td class="first"><strong><%=_("MAC")%></strong></td>
	<td class="last"><%= f.text_field :mac, :disabled => disabled %></td>
    </tr>
    <tr>
	<td class="first"><strong><%=_("Device Name")%></strong></td>
	<td class="last"><%= f.text_field :dev_name, :disabled => disabled %></td>
    </tr>
    <tr>
	<td class="first"><strong><%=_("Startup")%></strong></td>
	<td class="last"><%= f.text_field :startup, :disabled => disabled %></td>
    </tr>
    </table>
    <p><%= f.submit _("Save"), :disabled => disabled %><%= link_to _('Cancel'), "/network", :onclick=>"Element.show('progress')", :class => "button"%></p>
  </div>
<% end %>
