<%   host = session[:host] %>
<%   if not host.nil? and not host.empty? %>
<%     if not host.index("://").nil? %>
<%       host = host[host.index("://")+3, host.length-1] #extract "http(s)://" %>
<%     end %>
<%     user = session[:user] %>
       <div class="box">
         <p><%=_("Connected Host")%></p>
         <p><%=_("Name:")%> <%= host -%> <p>
         <%=_("User:")%> <%= user -%>
       </div>
<%   else %>
     <div>No sessions</div>
<%   end %>
