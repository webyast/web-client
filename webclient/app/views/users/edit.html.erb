<h1>Edit User</h1>
<br>

<% if @user.error_id != 0 %>
<p>
   Error ID: <%= @user.error_id -%>
   Error: <%= @user.error_string -%>
</p>
<% end %>

<% if @user.error_id == 0 or @user.error_id != 1 %>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <div class="table">
    <img src="/images/bg-th-left.gif" width="8" height="7" alt="" class="left" />
    <img src="/images/bg-th-right.gif" width="7" height="7" alt="" class="right" />
    <table class="listing form" cellpadding="0" cellspacing="0">
    <tr>
 	<th class="full" colspan="2">User</th>
    </tr>
    <tr>
	<td class="first" width="120"><strong>Full Name</strong></td>
	<td class="last"><%= f.text_field :fullName, :disabled=>@writePermission %></td>
    </tr>
    <tr class="bg">
	<td class="first"><strong>Groups</strong></td>
	<td class="last"><%= f.text_field :groups, :disabled=>@writePermission %></td>
    </tr>
    <tr>
	<td class="first"><strong>Default Group</strong></td>
	<td class="last"><%= f.text_field :defaultGroup, :disabled=>@writePermission %></td>
    </tr>
    <tr class="bg">
	<td class="first"><strong>Home Directory</strong></td>
	<td class="last"><%= f.text_field :homeDirectory, :disabled=>@writePermission %></td>
    </tr>
    <tr>
	<td class="first"><strong>Login Shell </strong></td>
	<td class="last"><%= f.text_field :loginShell, :disabled=>@writePermission %></td>
    </tr>
    <tr class="bg">
	<td class="first"><strong>Login Name </strong></td>
	<td class="last"><%= f.text_field :loginName, :disabled=>@writePermission %></td>
    </tr>
    <tr>
	<td class="first"><strong>UID</strong></td>
	<td class="last"><%= f.text_field :uid, :disabled=>@writePermission %></td>
    </tr>
    <tr class="bg">
	<td class="first"><strong>Password</strong></td>
	<td class="last"><%= f.text_field :password, :disabled=>@writePermission %></td>
    </tr>
    </table>
    <p><%= f.submit "Update", :disabled=>@writePermission %><%= link_to 'Back', users_path, :class => "button"%></p>
  </div>


<% end %>
<% end %>
